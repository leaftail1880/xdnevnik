{
	"extends": "./node_modules/expo/tsconfig.base.json",

	"compilerOptions": {
		"strictNullChecks": true,
		"allowJs": true,
		"esModuleInterop": true,
		"jsx": "react-native",
		"lib": ["DOM", "ESNext"],
		"moduleResolution": "node",
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"target": "ESNext"
	},

	"include": ["App.tsx", "src"],

	"exclude": [
		"node_modules",
		"babel.config.js",
		"metro.config.js",
		"jest.config.js"
	]
}
